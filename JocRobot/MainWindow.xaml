<Window x:Class="JocRobot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JocRobot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StatusBar DockPanel.Dock="Bottom" >
            <TextBlock x:Name="tbTempsCronometrat" Text="Temps transcorregut: 00:00:00.000"/>
            <Separator/>
            <TextBlock  x:Name="tbNMoviments" Text="Numero de moviments: 0" HorizontalAlignment="Center"/>
        </StatusBar>
        <Grid x:Name="grdTaulell"/>
    </DockPanel>
</Window>
